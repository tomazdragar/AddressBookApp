{
  "compilerOptions": {
    "module": "ESNext",
    "jsx": "react",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "baseUrl": "."
  }
}